@model IEnumerable<LibraryProject.Models.Entity.Categories>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="container mt-2 mb-2 text-center">
    <table class="table table-bordered">
        <tr class="text-center">
            <th>#</th>
            <th>Category Name</th>
            <th>Update Category</th>
            <th>Delete Category</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>@item.CategoryId</td>
                <td>@item.CategoryName</td>
                <td class="text-center"><a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-warning" style="width:50%">Update</a></td>
                <td class="text-center"><a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger" style="width:50%">Delete</a></td>
            </tr>
        }
    </table>
    <a href="/Category/AddCategory/" class="btn btn-primary">Add New Category</a>
</div>