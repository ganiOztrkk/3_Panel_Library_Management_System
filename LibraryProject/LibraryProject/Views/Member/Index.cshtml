@model IEnumerable<LibraryProject.Models.Entity.Members>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="container mt-2 mb-2 text-center">
    <table class="table table-bordered">
        <tr class="text-center">
            <th>#</th>
            <th>Member Name</th>
            <th>Member Surname</th>
            <th>Member Phone</th>
            <th>Member School</th>
            <th>Member Username</th>
            <th>Member Password</th>
            <th>Member Update</th>
            <th>Member Delete</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>@item.MemberId</td>
                <td>@item.MemberName</td>
                <td>@item.MemberSurname</td>
                <td>@item.MemberPhone</td>
                <td>@item.MemberSchool</td>
                <td>@item.MemberUsername</td>
                <td>@item.MemberPassword</td>
                <td class="text-center"><a href="/Member/UpdateMember/@item.MemberId" 
                                           class="btn btn-warning">Update</a></td>
                <td class="text-center"><a href="/Member/DeleteMember/@item.MemberId" 
                                           class="btn btn-danger">Delete</a></td>
            </tr>
        }
    </table>
    <a href="/Member/AddMember/" class="btn btn-primary">Add New Member</a>
</div>